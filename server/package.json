{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn babel . -d dist  --copy-files --ignore 'node_modules/**/*.js' --ignore 'dist/**' --source-maps",
    "serve": "yarn && yarn build && node dist/app.js",
    "start": "nodemon --exec babel-node app.js",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/node": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@hapi/joi": "15.1.1",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.4",
    "cookie-session": "1.3.3",
    "cors": "2.8.5",
    "debug": "2.6.9",
    "dotenv": "8.0.0",
    "express": "4.16.4",
    "express-session": "1.16.1",
    "handlebars": "4.1.2",
    "mongoose": "5.5.11",
    "morgan": "1.9.1",
    "nodemailer": "6.2.1",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "sinon": "7.3.2",
    "sinon-mongoose": "2.3.0",
    "supertest": "4.0.2"
  },
  "devDependencies": {
    "jest": "24.8.0",
    "nodemon": "1.19.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node"
  }
}
